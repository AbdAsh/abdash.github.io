---
import "../styles/global.css";
import Loader from "../components/Loader.astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Abdulrahman Mahmutoglu â€” Senior Frontend & AI Engineer | abdash",
  description = "Senior Frontend & AI Engineer specializing in Vue, React, Svelte, and Astro. Building scalable web architectures and AI-driven systems.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Abdulrahman Mahmutoglu" />
    <meta
      name="keywords"
      content="abdash, Abdulrahman Mahmutoglu, frontend engineer, senior software engineer, Vue, React, Svelte, Astro, portfolio"
    />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://abdash.net" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="abdash" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Canonical -->
    <link rel="canonical" href="https://abdash.net" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />

    <title>{title}</title>

    <!-- JSON-LD Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: "Abdulrahman Mahmutoglu",
        alternateName: "abdash",
        url: "https://abdash.net",
        jobTitle: "Senior Frontend & AI Engineer",
        worksFor: {
          "@type": "Organization",
          name: "Cybernetic Labs",
        },
        sameAs: ["https://github.com/AbdAsh", "https://linkedin.com/in/abdash"],
        knowsAbout: [
          "Frontend Development",
          "Vue.js",
          "React",
          "Svelte",
          "Astro",
          "AI/ML",
          "n8n",
        ],
      })}
    ></script>
  </head>
  <body>
    <Loader />
    <slot />
  </body>
</html>
