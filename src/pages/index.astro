  <script>
    // ‚ïê‚ïê‚ïê COLOR PALETTE PER TAB ‚ïê‚ïê‚ïê
    const TAB_COLORS: Record<string, [number, number, number]> = {
      about:      [46, 196, 182],   // teal (Astro)
      experience: [97, 218, 251],   // React blue
      projects:   [255, 62, 0],     // Svelte orange
      skills:     [66, 184, 131],   // Vue green
      ai:         [139, 92, 246],   // purple

    };

    let currentColor: [number, number, number] = [46, 196, 182];
    let targetColor: [number, number, number] = [46, 196, 182];

    function setActiveColor(tab: string) {
      targetColor = TAB_COLORS[tab] || [46, 196, 182];
      // Set CSS custom properties for full palette shift
      const root = document.documentElement;
      root.style.setProperty('--accent-r', String(targetColor[0]));
      root.style.setProperty('--accent-g', String(targetColor[1]));
      root.style.setProperty('--accent-b', String(targetColor[2]));
    }

    function lerpColor(speed = 0.035) {
      currentColor[0] += (targetColor[0] - currentColor[0]) * speed;
      currentColor[1] += (targetColor[1] - currentColor[1]) * speed;
      currentColor[2] += (targetColor[2] - currentColor[2]) * speed;
    }

    function cc(a: number): string {
      return `${Math.round(currentColor[0])},${Math.round(currentColor[1])},${Math.round(currentColor[2])}`;
    }

    // ‚ïê‚ïê‚ïê TAB SWITCHING ‚ïê‚ïê‚ïê
    const tabs = document.querySelectorAll<HTMLButtonElement>('.tab');
    const panels = document.querySelectorAll<HTMLDivElement>('.tab-panel');

    function switchTab(target: string) {
      tabs.forEach(t => {
        t.classList.toggle('active', t.dataset.tab === target);
        t.setAttribute('aria-selected', String(t.dataset.tab === target));
      });
      panels.forEach(p => p.classList.toggle('active', p.id === `panel-${target}`));
      setActiveColor(target);
    }

    tabs.forEach(tab => {
      tab.addEventListener('click', () => switchTab(tab.dataset.tab!));
    });

    document.addEventListener('keydown', (e) => {
      const n = parseInt(e.key);
      if (n >= 1 && n <= 5 && !e.ctrlKey && !e.metaKey && !e.altKey) {
        const el = document.activeElement as HTMLElement | null;
        if (el?.tagName === 'INPUT' || el?.tagName === 'TEXTAREA') return;
        const tabNames = ['about','experience','projects','skills','ai'];
        switchTab(tabNames[n - 1]);
      }
    });

    // ‚ïê‚ïê‚ïê STARFIELD CANVAS ‚ïê‚ïê‚ïê
    const canvas = document.getElementById('starfield') as HTMLCanvasElement;
    const ctx = canvas.getContext('2d')!;

    let W = 0, H = 0;
    function resize() { W = canvas.width = window.innerWidth; H = canvas.height = window.innerHeight; }
    resize();
    window.addEventListener('resize', resize);

    // Stars ‚Äî brighter and more numerous
    interface Star { x:number; y:number; s:number; o:number; ts:number; to:number; vx:number; vy:number; }
    const COUNT = 200;
    const stars: Star[] = Array.from({length: COUNT}, () => ({
      x: Math.random() * (W || window.innerWidth),
      y: Math.random() * (H || window.innerHeight),
      s: Math.random() * 2.5 + 0.5,
      o: Math.random() * 0.6 + 0.2,
      ts: Math.random() * 0.015 + 0.004,
      to: Math.random() * Math.PI * 2,
      vx: (Math.random() - 0.5) * 0.15,
      vy: (Math.random() - 0.5) * 0.15,
    }));

    // Mouse
    let mx = W / 2, my = H / 2, smx = mx, smy = my;
    document.addEventListener('mousemove', e => { mx = e.clientX; my = e.clientY; });

    // Shooting stars
    interface Shoot { x:number; y:number; len:number; spd:number; a:number; life:number; }
    let shoots: Shoot[] = [];
    function spawnShoot() {
      shoots.push({
        x: Math.random() * W * 0.8,
        y: Math.random() * H * 0.3,
        len: Math.random() * 100 + 40,
        spd: Math.random() * 12 + 6,
        a: Math.PI / 4 + (Math.random() - 0.5) * 0.5,
        life: 1,
      });
    }
    setInterval(spawnShoot, 2800 + Math.random() * 1500);

    // ‚ïê‚ïê‚ïê ANIMATION LOOP ‚ïê‚ïê‚ïê
    function animate(t: number) {
      ctx.clearRect(0, 0, W, H);

      // Smoothly interpolate active color
      lerpColor();
      const c = cc(0);

      // Smooth mouse
      smx += (mx - smx) * 0.05;
      smy += (my - smy) * 0.05;

      // ‚îÄ‚îÄ Background vignette that shifts with tab color ‚îÄ‚îÄ
      const vg1 = ctx.createRadialGradient(W * 0.15, H * 0.3, 0, W * 0.15, H * 0.3, W * 0.6);
      vg1.addColorStop(0, `rgba(${c},0.06)`);
      vg1.addColorStop(0.5, `rgba(${c},0.015)`);
      vg1.addColorStop(1, 'transparent');
      ctx.fillStyle = vg1;
      ctx.fillRect(0, 0, W, H);

      const vg2 = ctx.createRadialGradient(W * 0.85, H * 0.75, 0, W * 0.85, H * 0.75, W * 0.5);
      vg2.addColorStop(0, `rgba(${c},0.035)`);
      vg2.addColorStop(0.6, `rgba(${c},0.008)`);
      vg2.addColorStop(1, 'transparent');
      ctx.fillStyle = vg2;
      ctx.fillRect(0, 0, W, H);

      // ‚îÄ‚îÄ Mouse glow ‚Äî larger, more vibrant ‚îÄ‚îÄ
      const g = ctx.createRadialGradient(smx, smy, 0, smx, smy, 400);
      g.addColorStop(0, `rgba(${c},0.14)`);
      g.addColorStop(0.3, `rgba(${c},0.06)`);
      g.addColorStop(0.6, `rgba(${c},0.02)`);
      g.addColorStop(1, 'transparent');
      ctx.fillStyle = g;
      ctx.fillRect(0, 0, W, H);

      // ‚îÄ‚îÄ Stars ‚îÄ‚îÄ
      for (const st of stars) {
        st.x += st.vx; st.y += st.vy;
        if (st.x < -5) st.x = W + 5;
        if (st.x > W + 5) st.x = -5;
        if (st.y < -5) st.y = H + 5;
        if (st.y > H + 5) st.y = -5;

        const tw = Math.sin(t * st.ts + st.to) * 0.3 + 0.7;
        const dx = st.x - smx, dy = st.y - smy;
        const d = Math.sqrt(dx * dx + dy * dy);
        const boost = Math.max(0, 1 - d / 400) * 0.6;
        const op = Math.min(1, st.o * tw + boost);

        ctx.beginPath();
        ctx.arc(st.x, st.y, st.s * (1 + boost * 0.3), 0, Math.PI * 2);
        ctx.fillStyle = st.s > 1.4
          ? `rgba(255,255,255,${op * 0.85})`
          : `rgba(${c},${op})`;
        ctx.fill();
      }

      // ‚îÄ‚îÄ Constellation lines ‚îÄ‚îÄ
      for (let i = 0; i < stars.length; i++) {
        for (let j = i + 1; j < stars.length; j++) {
          const dx = stars[i].x - stars[j].x;
          const dy = stars[i].y - stars[j].y;
          const d = dx * dx + dy * dy;
          if (d < 6000) {
            ctx.beginPath();
            ctx.moveTo(stars[i].x, stars[i].y);
            ctx.lineTo(stars[j].x, stars[j].y);
            ctx.strokeStyle = `rgba(${c},${0.08 * (1 - Math.sqrt(d) / 77)})`;
            ctx.lineWidth = 0.5;
            ctx.stroke();
          }
        }
      }

      // ‚îÄ‚îÄ Shooting stars ‚îÄ‚îÄ
      shoots = shoots.filter(s => {
        s.x += Math.cos(s.a) * s.spd;
        s.y += Math.sin(s.a) * s.spd;
        s.life -= 0.01;
        if (s.life <= 0) return false;

        const tx = s.x - Math.cos(s.a) * s.len;
        const ty = s.y - Math.sin(s.a) * s.len;
        const sg = ctx.createLinearGradient(tx, ty, s.x, s.y);
        sg.addColorStop(0, 'transparent');
        sg.addColorStop(1, `rgba(${c},${s.life * 0.8})`);
        ctx.beginPath(); ctx.moveTo(tx, ty); ctx.lineTo(s.x, s.y);
        ctx.strokeStyle = sg; ctx.lineWidth = 1.8; ctx.stroke();

        // Bright head
        ctx.beginPath();
        ctx.arc(s.x, s.y, 2, 0, Math.PI * 2);
        ctx.fillStyle = `rgba(255,255,255,${s.life * 0.6})`;
        ctx.fill();
        return true;
      });

      requestAnimationFrame(animate);
    }
    requestAnimationFrame(animate);

    // Initialize color CSS properties
    setActiveColor('about');
  </script>
