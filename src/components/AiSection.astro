  }

  .demo-card {
    max-width: 500px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .demo-icon {
    font-size: 2.5rem;
    animation: float 3s ease-in-out infinite;
  }

  .demo-card h3 {
    font-size: 1.2rem;
    margin: 0;
  }

  .demo-card p {
    margin: 0;
  }

  .coming-soon {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--astro-purple);
