    letter-spacing: 0.1em;
    padding: 4px 12px;
    border: 1px solid rgba(255, 93, 1, 0.3);
    border-radius: 100px;
  }

  @media (max-width: 768px) {
    .ai-grid {
      grid-template-columns: 1fr;
