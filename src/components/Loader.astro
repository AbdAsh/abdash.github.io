<div id="loader" class="loader">
    <div class="loader-content">
        <div class="scanner"></div>
        <div class="loader-logo">
            <img src="/logo.png" alt="Loading" width="auto" height="180" />
        </div>
        <div class="glitch-wrapper">
            <div class="glitch" data-text="INITIALIZING SYSTEM...">
                INITIALIZING SYSTEM...
            </div>
        </div>
        <div class="progress-bar">
            <div class="progress-fill"></div>
        </div>
    </div>
</div>

<script>
    window.addEventListener("load", () => {
        const loader = document.getElementById("loader");
        if (loader) {
            setTimeout(() => {
                loader.classList.add("loader-hidden");
                // Dispatch event for main content to animate in
                window.dispatchEvent(new CustomEvent("loader-complete"));
                setTimeout(() => {
                    loader.style.display = "none";
                }, 3000); // 1.5s fade out
            }, 3000); // Minimum 2.5s show time
        }
    });
</script>

<style>
    .loader {
        position: fixed;
        inset: 0;
        background: #050a10; /* Slightly darker than body */
        z-index: 9999;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: opacity 0.8s ease-out, visibility 0.8s ease-out;
    }

    .loader-hidden {
        opacity: 0;
        visibility: hidden;
        pointer-events: none;
    }

    .loader-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        gap: 24px;
    }

    /* Scanner Effect */
    .scanner {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(
            circle,
            rgba(46, 196, 182, 0.1) 0%,
            transparent 70%
        );
        animation: rotate 4s linear infinite;
        z-index: -1;
        pointer-events: none;
    }

    @keyframes rotate {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    /* Glitch Text */
    .glitch-wrapper {
        position: relative;
        overflow: hidden;
    }

    .glitch {
        font-family: "JetBrains Mono", monospace;
        font-size: 1rem;
        font-weight: 700;
        color: var(--teal);
        letter-spacing: 0.1em;
        position: relative;
    }

    .glitch::before,
    .glitch::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #050a10;
    }

    .glitch::before {
        left: 2px;
        text-shadow: -1px 0 #ff00c1;
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim 5s infinite linear alternate-reverse;
    }

    .glitch::after {
        left: -2px;
        text-shadow: -1px 0 #00fff9;
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim2 5s infinite linear alternate-reverse;
    }

    @keyframes glitch-anim {
        0% {
            clip: rect(32px, 9999px, 11px, 0);
        }
        20% {
            clip: rect(68px, 9999px, 89px, 0);
        }
        40% {
            clip: rect(15px, 9999px, 96px, 0);
        }
        60% {
            clip: rect(83px, 9999px, 2px, 0);
        }
        80% {
            clip: rect(4px, 9999px, 60px, 0);
        }
        100% {
            clip: rect(55px, 9999px, 36px, 0);
        }
    }

    @keyframes glitch-anim2 {
        0% {
            clip: rect(65px, 9999px, 99px, 0);
        }
        20% {
            clip: rect(12px, 9999px, 3px, 0);
        }
        40% {
            clip: rect(88px, 9999px, 45px, 0);
        }
        60% {
            clip: rect(2px, 9999px, 76px, 0);
        }
        80% {
            clip: rect(34px, 9999px, 18px, 0);
        }
        100% {
            clip: rect(91px, 9999px, 52px, 0);
        }
    }

    /* Progress Bar */
    .progress-bar {
        width: 200px;
        height: 2px;
        background: rgba(46, 196, 182, 0.2);
        border-radius: 2px;
        overflow: hidden;
        position: relative;
    }

    .progress-fill {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 0%;
        background: var(--teal);
        box-shadow: 0 0 10px var(--teal);
        animation: load 2.5s cubic-bezier(0.22, 1, 0.36, 1) forwards;
    }

    @keyframes load {
        0% {
            width: 0%;
        }
        50% {
            width: 70%;
        }
        100% {
            width: 100%;
        }
    }

    .loader-logo img {
        animation: pulse 2s ease-in-out infinite;
        filter: drop-shadow(0 0 15px rgba(46, 196, 182, 0.4));
    }

    @keyframes pulse {
        0%,
        100% {
            opacity: 0.8;
            transform: scale(0.98);
        }
        50% {
            opacity: 1;
            transform: scale(1.02);
        }
    }
</style>
