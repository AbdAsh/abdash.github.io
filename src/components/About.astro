<style>
  .about-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: var(--space-xl);
    align-items: start;
  }

  .about-text p {
    font-size: 1.05rem;
    line-height: 1.8;
  }

  .about-text strong {
    color: var(--teal);
    font-weight: 600;
  }

  .about-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
  }

  .stat-card {
    text-align: center;
    padding: var(--space-lg) var(--space-md);
  }

  .stat-number {
    display: block;
    font-size: 2rem;
    font-weight: 800;
    color: var(--teal);
    font-family: var(--font-heading);
  }

  .stat-label {
    display: block;
    font-size: 0.8rem;
    color: var(--silver);
    margin-top: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: var(--font-mono);
  }

  @media (max-width: 768px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }
  }
</style>
